{
  "name": "Store Explorer",
  "version": "0.0.0",
  "manifest_version": 2,
  "description": "View in-depth details about your Shopify Store.",
  "author": "Liam Merlyn",
  "icons": {
    "128": "images/icon.png"
  },
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [{
    "matches": ["https://*/*"],
    "run_at": "document_end",
    "js": ["content.js"]
  }],
  "background": {
    "scripts": ["autoreload.js", "background.js"],
    "persistent": true
  },
  "permissions": ["tabs", "storage"],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}