{
  "manifest_version": 3,
  "name": "Theme Explorer - Beta",
  "description": "Theme Explorer allows you to view important information about the themes installed on your Shopify store.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon48.png"
  },
  "icons": {
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.myshopify.com/*"],
      "js": ["contentScript.bundle.js"],
      "css": ["content.styles.css"]
    }
  ],
  "permissions": [
    "tabs"
  ],
  "web_accessible_resources": [
    {
      "resources": ["content.styles.css", "icon-128.png", "icon-34.png", "nunito.woff2", "nunito-italic.woff2"],
      "matches": []
    }
  ]
}
